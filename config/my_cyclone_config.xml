<?xml version="1.0" encoding="UTF-8"?>
<CycloneDDS xmlns="https://cdds.io/config"
            xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
            xsi:schemaLocation="https://cdds.io/config https://raw.githubusercontent.com/eclipse-cyclonedx/master/etc/cyclonedx.xsd">
  <Domain>
    <General>
      <!-- Auto-detect network interfaces (works better in Docker) -->
      <Interfaces>
        <NetworkInterface name="enx7cc2c65174a5"/>
      </Interfaces>
      
      <!-- Allow multicast for discovery -->
      <AllowMulticast>spdp</AllowMulticast>
      
      <!-- Don't restrict routing in Docker -->
      <DontRoute>true</DontRoute>
    </General>

    <Discovery>
      <!-- Your specific peers -->
      <Peers>
        <Peer Address="192.168.131.19"/>  <!-- LiDAR -->
        <Peer Address="192.168.131.1"/>   <!-- Jackal -->
        <Peer Address="192.168.131.100"/> <!-- Your PC -->
      </Peers>
      
      <SPDPMulticastAddress>239.255.0.1</SPDPMulticastAddress>
    </Discovery>

    <Tracing>
      <Verbosity>config</Verbosity>
      <OutputFile>stdout</OutputFile>
    </Tracing>
  </Domain>
</CycloneDDS>
